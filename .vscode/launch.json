{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug FamilyVista (app.py)",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/app.py",
            "console": "integratedTerminal",
            "env": {
                "FLASK_ENV": "development"
            }
        },
        {
            "type": "chrome",
            "name": "http://localhost:8080/",
            "request": "launch",
            "url": "http://localhost:8080/"
        }
    ]
}